<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">配送先登録/一覧</h4>
  </div>

  <div class="row w-100 my-3">
    <%= form_with model: [:public, @address], class:"form-horizontal", local: true do |f| %>

      <div class="form-group row">
        <label class="col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-md-4">
          <%= f.text_field :postal_code, placeholder: "0000000" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">住所</label>
        <div class="col-md-4">
          <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">宛名</label>
        <div class="col-md-4">
          <%= f.text_field :name, placeholder: "令和道子" %><%= f.submit "新規登録", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>

  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>郵便番号</th>
          <th>住所</th>
          <th>宛名</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @addresses.each do |address| %>
        <tr>
          <td><%= address.postal_code %></td>
          <td><%= address.address %></td>
          <td><%= address.name %></td>
          <td>
            <%= link_to "編集する", edit_adress_path, class: 'btn btn-success btn-sm' %>
            <%= link_to "削除する", "/adresses/#{current_user.id}", method: :delete %>
          </td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>