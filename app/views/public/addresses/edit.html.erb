<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">配送先編集</h4>
  </div>

  <div class="row w-100 my-3">
    <%= form_with model: [:public, @address], local: true do |f| %>

      <div class="form-group row">
        <label class="col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-md-4">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">住所</label>
        <div class="col-md-4">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">宛名</label>
        <div class="col-md-4">
          <%= f.text_field :name　%><%= f.submit "変更内容を保存", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
  </div>
</div>