<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">新規会員登録</h4>
  </div>

  <div class="row w-100 my-3">
    <form class="form-horizontal mx-auto">
    <%= form_with model: @customer, url: customer_session_path, local: true do |f| %>
      <%= render "publics/shared/error_messages", resource: resource %>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">名前</label>
        <div class="col">
          <p>(姓)</p><%= f.text_field :last_name, autofocus: true, autocomplete: "name", placeholder: "令和" %>
          <p>(名)</p><%= f.text_field :first_name, autofocus: true, autocomplete: "name", placeholder: "道子" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">フリガナ</label>
        <div class="col">
          <p>(セイ)</p><%= f.text_field :last_name_kana, autofocus: true, autocomplete: "name", placeholder: "レイワ" %>
          <p>(メイ)</p><%= f.text_field :first_name_kana, autofocus: true, autocomplete: "name", placeholder: "ミチコ" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">メールアドレス</label>
        <div class="col-md-7">
          <%= f.email_field :email, autofocus: true, autocomplete: "email", placeholder: "sample@example.com" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">郵便番号(ハイフンなし)</label>
        <div class="col-md-7">
          <%= f.text_field :postal_code, autofocus: true, autocomplete: "postal_code", placeholder: "0000000" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">住所</label>
        <div class="col-md-7">
          <%= f.text_field :address, autofocus: true, autocomplete: "address", placeholder: "東京都渋谷区代々木神園町0-0" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">電話番号(ハイフンなし)</label>
        <div class="col-md-7">
          <%= f.text_field :telephone_number, autofocus: true, autocomplete: "address", placeholder: "0000000000" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">パスワード(6文字以上)</label>
        <% if @minimum_password_length %>
        <em>(<%= @minimum_password_length %> characters minimum)</em>
        <% end %><br />
        <%= f.password_field :password, autocomplete: "new-password" %>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">パスワード(確認用)</label>
        <div class="col-md-7">
          <%= f.password_field :password_confirmation, autocomplete: "new-password" %>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-7">
          <%= f.submit "Sign up", class: 'btn btn-success' %>
        </div>
      </div>
    <% end %>
    </form>

    <%= render "devise/shared/links" %>
  </div>

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">既に登録済みの方</h4>
    <%= link_to "こちら", new_customer_session_path %><p>からログインしてください。</p>
  </div>

</div>