<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">注文情報入力</h4>
  </div>

  <div class="row mt-3 ml-5">

    <%= form_with model: @order, method: :post, url: orders_confirm_path, local: true do |f| %>

    <div>
      <h5>支払い方法</h5>
      <div class="form-check ml-5">
        <div class="row">
          <%= f.radio_button :payment, 0, checked: true, class: 'form-check-input' %>
          <%= f.label :payment, 'クレジットカード' %>
        </div>
        <div class="row">
          <%= f.radio_button :payment, 1, class: 'form-check-input' %>
          <%= f.label :payment, '銀行振込' %>
        </div>
      </div>
    </div>

    <div>
      <h5>お届け先</h5>
      <div class="form-check ml-5">

        <div class="row">
          <div class="w-100">
            <%= f.radio_button :address, @customer.address, checked: true, class: 'form-check-input' %>
            <%= f.label :address, 'ご自身の住所' %>
            <%= f.hidden_field :postal_code, :value => @customer.postal_code %>
            <%= f.hidden_field :name, :value => @customer.last_name %>
            <%= f.hidden_field :name, :value => @customer.first_name %>
          </div>
          <div class="col-md-7 ml-3 mb-2">
            〒<%= @customer.postal_code %><%= @customer.address %><br>
            <%= @customer.last_name %><%= @customer.first_name %>
          </div>
        </div>

        <div class="row">
          <div>
            <%= f.radio_button :address, checked: true, class: 'form-check-input' %>
            <%= f.label :address, '登録済住所から選択' %>
          </div>
        </div>

        <div class="row">
          <div class="w-100">
            <%= f.radio_button :address, class: 'form-check-input' %>
            <%= f.label :address, '新しいお届け先' %>
          </div>
          <div class="form-group row ml-3">
            <label class="col-md-3 col-form-label">郵便番号(ハイフンなし)</label>
            <div class="col-md-7">
              <%= f.text_field :postal_code, placeholder: "0000000" %>
            </div>
            <label class="col-md-3 col-form-label">住所</label>
            <div class="col-md-7">
              <%= f.text_field :address, placeholder: "東京都渋谷区代々木神園町0-0", size: "50" %>
            </div>
            <label class="col-md-3 col-form-label">宛名</label>
            <div class="col-md-7">
              <%= f.text_field :name, placeholder: "令和道子" %>
            </div>
          </div>
        </div>

      </div>
    </div>

    <div class="row w-100">
      <div class="mx-auto mb-3">
        <%= f.submit "確認画面へ進む", class: 'btn btn-primary' %>
      </div>
    </div>

    <% end %>
  </div>

</div>