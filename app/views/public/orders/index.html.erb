<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">注文履歴一覧</h4>
  </div>

  <div class="row">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td><%= order.reated_at.strftime('%Y/%m/%d') %></td>
          <td>
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td>
            <% @order_items.each do |orderitem| %>
              <%= orderitem.item.name %>
            <% end %>
          </td>
          <td><%= order.total_fee %></td>
          <td><%= order.is_active %></td>
          <td><%= link_to "表示する", order_path, class: 'btn btn-primary btn-sm' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>