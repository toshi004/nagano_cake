<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">注文履歴一覧</h4>
  </div>

  <div class="row">
    <table class="table table-bordered table-sm">
      <thead class="thead-light">
        <tr>
          <th>注文日</th>
          <th>配送先</th>
          <th>注文商品</th>
          <th>支払金額</th>
          <th>ステータス</th>
          <th>注文詳細</th>
        </tr>
      </thead>
      <tbody>
        <% @orders.each do |order| %>
        <tr>
          <td class="pt-4"><%= order.created_at.strftime('%Y/%m/%d') %></td>
          <td class="col-md-4">
            〒<%= order.postal_code %><br>
            <%= order.address %><br>
            <%= order.name %>
          </td>
          <td class="pt-3 col-md-2">
            <% order.order_items.each do |order_item| %>
              <%= order_item.item.name %></br>
            <% end %>
          </td>
          <td class="pt-4"><%= order.total_fee %>円</td>
          <td class="pt-4 col-md-2"><%= order.is_active %></td>
          <td class="pt-4 col-md-2 text-center"><%= link_to "表示する", order_path(order), class: 'btn btn-primary btn-sm' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>