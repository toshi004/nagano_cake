<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">注文情報確認</h4>
  </div>

  <div class="row">
    <div class="col-md-2">
      <table class="table table-bordered table-sm w-50">
        <thead class="thead-light">
          <tr>
            <th>商品名</th>
            <th>単価(税込)</th>
            <th>数量</th>
            <th>小計</th>
          </tr>
        </thead>
        <tbody>
          <%= @cart_items.each do |cart_item| %>
          <tr>
            <td>
              <%= attachment_image_tag cart_item.item, :image, format: 'jpeg', fallback: "NoImage_stuff.jpg",size: "50x40", class: "mr-2" %>
              <%= cart_item.item.name %>
            </td>
            <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
            <td><%= cart_item.amount %></td>
            <td><%= cart_item.item_subtotal.to_s(:delimited) %></td>
          </tr>
          <% end %>
        </tbody>
      </table>
    </div>

    <div class="col pull-right">
      <table>
        <tr>
          <th class="thead-light">送料</th>
          <td><%= @orders.shipping_fee %></td>
        </tr>
        <tr>
          <th class="thead-light">商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th class="thead-light">請求金額</th><td><%= @orders.total_fee %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <h3>支払方法</h3><p><%= @orders.payment %></p>
    <h3>お届け先</h3>
    <p><%= @orders.postal_code%> <%= @orders.address %><br>
       <%= @orders.name %>
    </p>
  </div>

  <div class="row my-3 mx-auto">
    <%= link_to "注文を確定する", orders_thanks_path, class: 'btn btn-success' %>
  </div>
</div>