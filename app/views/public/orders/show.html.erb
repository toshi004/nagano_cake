<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">注文履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col-md-6">
      <p class="font-weight-bold mb-1">注文情報</p>
      <table class="table table-bordered table-sm">
        <tr>
          <th class="bg-light col-md-3">注文日</th>
          <td><%= @order.created_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="bg-light col-md-2 pt-3">配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="bg-light col-md-2">支払方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th class="bg-light col-md-2">ステータス</th>
          <td><%= @order.is_active %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-3">
      <p class="font-weight-bold mb-1">請求情報</p>
      <table class="table table-bordered table-sm">
        <tr>
          <th class="bg-light col-md-5">商品合計</th>
          <td class="text-right"><%= @total.to_s(:delimited) %></td>
        </tr>
        <tr>
          <th class="bg-light">配送料</th>
          <td class="text-right"><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th class="bg-light font-weight-bold">ご請求額</th>
          <td class="text-right"><%= @total_fee.to_s(:delimited) %></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mt-3">
    <div class="col-md-8">
    <p class="font-weight-bold mb-1">注文内容</p>
    <table class="table table-bordered table-sm">
      <thead class="bg-light">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.price.to_s(:delimited) %></td>
          <td><%= order_item.amount %></td>
          <td><%= order_item.item_subtotal %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    </div>
  </div>

</div>