<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">注文履歴詳細</h4>
  </div>

  <div class="row">
    <div class="col-md-2">
      <h6>注文情報</h6>
      <table class="table">
        <tr>
          <th class="thead-light">注文日</th>
          <td><%= @order.reated_at.strftime('%Y/%m/%d') %></td>
        </tr>
        <tr>
          <th class="thead-light">配送先</th>
          <td>
            〒<%= @order.postal_code %><br>
            <%= @order.address %><br>
            <%= @order.name %>
          </td>
        </tr>
        <tr>
          <th class="thead-light">支払方法</th>
          <td><%= @order.payment %></td>
        </tr>
        <tr>
          <th class="thead-light">ステータス</th>
          <td><%= @order.is_active %></td>
        </tr>
      </table>
    </div>

    <div class="col-md-7">
      <table class="table">
        <tr>
          <th class="thead-light">商品合計</th>
          <td></td>
        </tr>
        <tr>
          <th class="thead-light">配送料</th>
          <td><%= @order.shipping_fee %></td>
        </tr>
        <tr>
          <th class="thead-light font-weight-bold">ご請求額</th>
          <td></td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row">
    <h6>注文内容</h6>
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品</th>
          <th>単価(税込)</th>
          <th>個数</th>
          <th>小計</th>
        </tr>
      </thead>
      <tbody>
        <% @order_items.each do |order_item| %>
        <tr>
          <td><%= order_item.item.name %></td>
          <td><%= order_item.price %></td>
          <td><%= order_item.amount %></td>
          <td></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>
</div>