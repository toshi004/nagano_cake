<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">マイページ</h4>
  </div>

  <div class="row mt-3 ml-5">
    <h6>登録情報</h6>
    <div>
      <%= link_to "編集する", customers_edit_path, class: 'btn btn-success' %>
    </div>

    <table>
      <tr>
        <th class="thead-light">氏名</th><td><%= @customer.last_name %><%= @customer.first_name %></td>
      </tr>
      <tr>
        <th class="thead-light">カナ</th><td><%= @customer.last_name_kana %><%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th class="thead-light">郵便番号</th><td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th class="thead-light">住所</th><td><%= @customer.address %></td>
      </tr>
      <tr>
        <th class="thead-light">電話番号</th><td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th class="thead-light">メールアドレス</th><td><%= @customer.email %></td>
      </tr>
    </table>

    <h6>配送先</h6>
    <div><%= link_to "一覧を見る", adresses_path, class: "btn btn-primary" %></div>
    <h6>注文履歴</h6>
    <div><%= link_to "一覧を見る", orders_path, class: "btn btn-primary" %></div>
  </div>

</div>