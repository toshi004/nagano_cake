<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">会員情報編集</h4>
  </div>

  <div class="row w-100 my-3">
    <%= form_with model: [:public, @customer], class:"form-horizontal", local: true do |f| %>

      <div class="form-group row">
        <label class="col-form-label">氏名</label>
        <div class="form-inline col-md-4">
          <%= f.text_field :last_name %><%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">フリガナ</label>
        <div class="form-inline col-md-4">
          <%= f.text_field :last_name_kana %><%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">郵便番号</label>
        <div class="col-md-4"><%= f.text_field :postal_code %></div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">住所</label>
        <div class="col-md-4"><%= f.text_field :address %></div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">電話番号</label>
        <div class="col-md-4"><%= f.text_field :telephone_number %></div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">メールアドレス</label>
        <div class="col-md-4"><%= f.text_field :email %></div>
      </div>

      <div class="col-md-4"><%= f.submit "編集内容を保存", class: 'btn btn-success' %></div>
      <div class="col-md-8"><%= link_to "退会する", customers_unsubscribe_path, class: 'btn btn-danger' %></div>

    <% end %>
  </div>

</div>