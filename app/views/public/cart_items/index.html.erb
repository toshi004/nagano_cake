<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">ショッピングカート</h4>
    <div class="col pull-right">
      <%= link_to "カートを空にする", cart_items_destroy_all_path, class: 'btn btn-sm btn-danger' %>
    </div>
  </div>

  <div class="row w-100 my-3">
    <table class="table">
      <thead class="thead-light">
        <tr>
          <th>商品名</th>
          <th>単価(税込)</th>
          <th>数量</th>
          <th>小計</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @cart_items.each do |cart_item| %>
        <tr>
          <td><%= cart_item.item.image %> <%= cart_item.item.name %></td>
          <td><%= cart_item.item.add_tax_price.to_s(:delimited) %></td>
          <td>
            <%= form_with model: [:public, @cart_item], local: true do |f| %>
            <%= f.select :amount, options_for_select((1..10).to_a) %><%= f.submit "変更", class: 'btn btn-sm btn-success' %>
            <% end %>
          </td>
          <td></td>
          <td><%= link_to "削除する", url: '/cart_items/:id', metod: :patch, class: 'btn btn-sm btn-danger' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
    <div class="col">
      <%= link_to "買い物を続ける", root_path, class: "btn btn-sm btn-primary" %>
    </div>
    <div class="pull-right">
      <table>
        <tr>
          <th class="thead-light">合計金額</th>
          <td>1500</td>
        </tr>
      </table>
    </div>
  </div>

  <div class="row mx-auto mt-2 mb-5">
    <%= link_to "情報入力に進む", new_order_path, class: 'btn btn-success' %>
  </div>
</div>