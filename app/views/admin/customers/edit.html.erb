<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員情報編集</h4>
  </div>

  <div class="row my-3 ml-5">
    <form class="form-horizontal">
      <p>会員ID</p><%= @customer.id %>

      <% form_with model: [:admin, @customer], local:true do |f| %>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">氏名</label>
        <div class="col-md-7">
          <%= f.text_field :last_name %>  <%= f.text_field :first_name %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">フリガナ</label>
        <div class="col-md-7">
          <%= f.text_field :last_name_kana %>  <%= f.text_field :first_name_kana %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">郵便番号</label>
        <div class="col-md-7">
          <%= f.text_field :postal_code %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">住所</label>
        <div class="col-md-7">
          <%= f.text_field :address %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">電話番号</label>
        <div class="col-md-7">
          <%= f.text_field :telephone_number %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">メールアドレス</label>
        <div class="col-md-7">
          <%= f.text_field :email %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-md-5 col-form-label">会員ステータス</label>
        <div class="col-md-7">
          <div class="d-inline mr-3">
            <%= f.radio_button :is_active, true, checked: true %>
            <%= f.label :is_active, '有効', value: true %>
          </div>
          <div class="d-inline">
            <%= f.radio_button :is_active, false %>
            <%= f.label :is_active, '退会', value: false %>
          </div>
        </div>
      </div>

      <div class="form-group row">
        <div class="col-md-4"></div>
        <div class="col-md-4">
          <%= f.submit "変更を保存", class: 'btn btn-success' %>
        </div>
      </div>

      <% end %>
  </div>

</div>