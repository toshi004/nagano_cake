<div>
  <h2><%= @customer.last_name,@customer.first_name %>さんの会員情報編集</h2>

  <p>会員ID</p>　<%= @customer.id %>

  <% form_with model:@customer, local:true do |f| %>
  <label for="customer_name">氏名</label>
  <%= f.text_field :last_name %> <%= f.text_field :first_name %>

  <label for="customer_name_kana">フリガナ</label>
  <%= f.text_field :last_name_kana %> <%= f.text_field :first_name_kana %>

  <label for="postal_code">郵便番号</label>
  <%= f.text_field :postal_code %>

  <label for="customer_address">住所</label>
  <%= f.text_field :address %>

  <label for="telephone_number">電話番号</label>
  <%= f.text_field :telephone_number %>

  <label for="customer_email">メールアドレス</label>
  <%= f.text_field :email %>

  <label for="customer_is_active">会員ステータス</label>

  <%= f.submit "変更を保存" %>

  <% end %>

</div>