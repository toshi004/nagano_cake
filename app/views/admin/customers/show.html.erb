<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light"><%= @customer.last_name %><%= @customer.first_name %>さんの会員詳細</h4>
  </div>

  <div class="row my-3 ml-5">
    <table class="table table-borderless w-auto ml-5">
      <tr>
        <th>会員ID</th>
        <td><%= @customer.id %></td>
      </tr>
      <tr>
        <th>氏名</th>
        <td><%= @customer.last_name %> <%= @customer.first_name %></td>
      </tr>
      <tr>
        <th>フリガナ</th>
        <td><%= @customer.last_name_kana %> <%= @customer.first_name_kana %></td>
      </tr>
      <tr>
        <th>郵便番号</th>
        <td><%= @customer.postal_code %></td>
      </tr>
      <tr>
        <th>住所</th>
        <td><%= @customer.address %></td>
      </tr>
      <tr>
        <th>電話番号</th>
        <td><%= @customer.telephone_number %></td>
      </tr>
      <tr>
        <th>メールアドレス</th>
        <td><%= @customer.email %></td>
      </tr>
      <tr>
        <th>会員ステータス</th>
        <td>
          <% if @customer.is_active == true %>
            <p class="text-success">有効</p>
          <% else %>
            <p class="text-muted">退会</p>
          <% end %>
        </td>
      </tr>
      <tr>
        <th></th>
        <td>
          <%= link_to "編集する", edit_admin_customer_path(@customer.id), class: 'btn btn-success mr-5' %>
          <%= link_to "注文履歴一覧を見る", admin_path, class: 'btn btn-primary ml-5' %>
        </td>
      </tr>
    </table>
  </div>

</div>