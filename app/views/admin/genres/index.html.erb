<div class="container mt-3">

  <div class="row mt-3 ml-5">
    <h4 class="bg-light">ジャンル一覧・追加</h4>
  </div>

  <div class="row my-5">
    <%= form_with model: [:admin, @genre], local:true do |f| %>
      <label class="col-form-label mx-2">ジャンル名</label>
      <%= f.text_field :name, placeholder: "ジャンル名", class: 'mx-5' %>
      <%= f.submit "新規登録", class: 'btn btn-success' %>
    <% end %>
  </div>

  <div class="row my-2">
    <table class="table ml-3 w-25">
      <thead class="thead-light">
        <tr>
          <th>ジャンル</th>
          <th></th>
        </tr>
      </thead>
      <tbody>
        <% @genres.each do |genre| %>
        <tr>
          <td><%= genre.name %></td>
          <td><%= link_to "編集する", edit_admin_genre_path(genre.id), class: 'btn btn-success btn-sm mx-auto' %></td>
        </tr>
        <% end %>
      </tbody>
    </table>
  </div>

</div>