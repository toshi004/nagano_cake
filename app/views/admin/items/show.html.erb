<div>
  <h2>商品詳細</h2>

  <div class="image">
    <%= attachment_image_tag @item, :image %>
  </div>

  <div class="introduce">
    <table>
      <tr>
        <th>商品名</th><td><%= @item.name %></td>
      </tr>
      <tr>
        <th>商品説明</th><td><%= @item.introduction %></td>
      </tr>
      <tr>
        <th>ジャンル</th><td><%= @item.genre_id %></td>
      </tr>
      <tr>
        <th>税込価格</br>(税抜価格)</th><td><%= @item.price %></td>
      </tr>
      <tr>
        <th>販売ステータス</th><td><%= @item.is_active %></td>
      </tr>
    </table>

    <div>
      <%= link_to "編集する", edit_admin_item_path(@item) %>
    </div>
  </div>

</div>