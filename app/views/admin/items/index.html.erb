<div class="container mt-3">

  <div class="row mt-3 ml-5">
      <h4 class="bg-light">商品一覧</h4>

    <div class="col text-right mr-5">
      <%= link_to "+", new_admin_item_path, class: 'btn btn-light rounded-circle shadow' %>
    </div>
  </div>

  <div class="row my-3">
    <table class="table w-75 mx-auto">
      <thead class="thead-light">
        <tr>
          <th>商品ID</th>
          <th>商品名</th>
          <th>税抜価格</th>
          <th>ジャンル</th>
          <th>ステータス</th>
        </tr>
      </thead>
      <tbody>
        <% @items.each do |item| %>
        <tr>
          <td><%= item.id %></td>
          <td><%= item.name %></td>
          <td><%= item.price %></td>
          <td><%= item.genre.name %></td>
          <td><%= item.is_active %></td>
        </tr>
        <% end %>
      </tbody>
      <%= paginate @items %>
    </table>
  </div>

</div>