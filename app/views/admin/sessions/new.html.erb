<div class="container">
  <div class="row">

    <div class="m-2 bg-light">
      <h4>管理者ログイン</h4>
    </div>

    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

      <div class="form-group row">
        <label class="col-sm-2 col-form-label">メールアドレス</label>
        <div class="col-sm-10">
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
        </div>
      </div>

      <div class="form-group row">
        <label class="col-form-label">パスワード</label>
        <div class="col-sm-10">
          <%= f.password_field :password, autocomplete: "current-password" %>
        </div>
      </div>

      <div class="form-group mx-auto">
        <%= f.submit "ログイン", class: 'btn btn-primary btn-sm' %>
      </div>
    <% end %>

  </div>
</div>