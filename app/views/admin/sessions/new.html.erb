<div class="container mt-3">
  <div class="row mt-3 ml-5">
    <h4 class="bg-light">管理者ログイン</h4>
  </div>

  <div class="row justify-content-center">
    <%= form_with model: @admin, url: admin_session_path, local: true do |f| %>

      <div class="form-group">
        <label class="col-form-label mr-3">メールアドレス</label>
          <%= f.email_field :email, autofocus: true, autocomplete: "email" %>
      </div>

      <div class="form-group">
        <label class="col-form-label mr-5">パスワード</label>
          <%= f.password_field :password, autocomplete: "current-password" %>
      </div>

      <div class="form-group">
        <div class="text-center ml-3">
         <%= f.submit "ログイン", class: 'btn btn-primary btn-sm' %>
        </div>
      </div>
    <% end %>
  </div>

</div>